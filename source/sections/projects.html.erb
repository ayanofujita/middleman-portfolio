<section id="projects">
  <h3 class="text-center">Featured Projects</h3>
  <% data.projects.each_with_index do |project, index| %>
    <div class="project-container d-flex align-items-center">
      <div id="project<%= index %>" class="project-card row align-items-center rounded-25">
        <%= image_tag project.image, alt: "#{project.name} image", class: "col-12 col-md-8 mb-3 #{'d-none' if index.odd?}" %>

        <div class="project-description col-12 col-md-4 <%= 'text-end' if index.odd? %>">
          <p class="mb-2" style="color: <%= project.color %>;"><strong>featured project 0<%= index + 1 %>/03 </strong></p>
          <h4 class="flex-grow-1 mb-0"><%= project.name %></h4>
          <p><%= project.role %></p>
          <p class="opacity-75"><%= project.description %></p>
          <p class="mb-1 opacity-75"><%= project.tech %></p>
          <div class="d-flex <%= 'justify-content-end' if index.odd? %>">
            <a href="<%= project.github %>" target="blank" class="me-2 opacity-75">
              <i class="fa-brands fa-github"></i>
            </a>
            <a href="<%= project.url %>" target="blank" class="opacity-75">
              <i class="fas fa-external-link-alt"></i>
            </a>
          </div>
        </div>

        <%= image_tag project.image, alt: "#{project.name} image", class: "col-12 col-md-8 mb-3 #{'d-none' if index.even?}" %>
      </div>
    </div>
  <% end %>
</section>
