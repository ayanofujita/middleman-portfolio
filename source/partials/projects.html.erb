<section id="projects">
  <% data.projects.each_with_index do |project, index| %>
    <div id="project<%= index %>" class="project row my-5 align-items-center justify-content-center">
      <%= image_tag project.image, alt: "Project Stroller City image", class: "col-12 col-md-7 col-lg-8 mb-3 #{'d-none' if index.odd?}" %>

      <div class="project-description col-12 col-md-4 <%= 'text-end' if index.odd? %>">
        <p class="mb-2" style="color: <%= project.color %>;"><strong>featured project 0<%= index + 1 %>/03 </strong></p>
        <h4 class="flex-grow-1 mb-0"><%= project.name %></h4>
        <p><%= project.role %></p>
        <p><%= project.description %></p>
        <p class="mb-1"><%= project.tech %></p>
        <div class="d-flex <%= 'justify-content-end' if index.odd? %>">
          <a href="<%= project.github %>" target="blank" class="me-2">
            <i class="fa-brands fa-github"></i>
          </a>
          <a href="#" target="blank">
            <i class="fas fa-external-link-alt"></i>
          </a>
        </div>
      </div>

      <%= image_tag project.image, alt: "Project Stroller City image", class: "col-12 col-md-7 col-lg-8 mb-3 #{'d-none' if index.even?}" %>
    </div>
  <% end %>
</section>

